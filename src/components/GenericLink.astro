---
const {
  href,
  target = "_blank",
  rel = "noopener noreferrer",
  text,
} = Astro.props;
---

<a href={href} target={target} rel={rel}>
  <span
    class="underline ease bg-gradient-to-tl from-primaryAccent to-primaryAccent bg-invisibleSmall bg-left-bottom bg-no-repeat duration-300 hover:bg-visibleSmall"
    >{text}</span
  ></a
>
