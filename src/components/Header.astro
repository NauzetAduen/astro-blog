---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import HeaderLink from "./HeaderLink.astro";
---

<header class="lg:flex gap-5 max-w-3xl mx-auto my-9">
  <Astronav>
    <div class="flex w-full justify-between text-xl font-bold lg:text-3xl">
      <div class="flex justify-end">
        <a href="/" transition:name="nau"
          >&lbrace;nau<span class="text-springGreen">.</span>&rbrace;</a
        >
      </div>
      <div class="block lg:hidden">
        <MenuIcon class="w-6 h-6 ring-richBlack" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <ul class="flex flex-col lg:flex-row lg:gap-8 items-center">
        <HeaderLink href="/blog" transition:name="blog">blog</HeaderLink>
        <HeaderLink href="/projects" transition:name="projects">
          projects
        </HeaderLink>
        <HeaderLink href="/about" transition:name="about">about</HeaderLink>
      </ul>
    </MenuItems>
  </Astronav>
</header>
