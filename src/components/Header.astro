---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import HeaderLink from "./HeaderLink.astro";
---

<header class="lg:flex p-5 gap-5 max-w-3xl mx-auto lg:px-[1em] lg:py-[3em]">
  <Astronav>
    <div class="flex w-full justify-between text-xl font-bold lg:text-3xl">
      <div class="flex justify-end">
        <HeaderLink><a href="/">nau.</a></HeaderLink>
      </div>
      <div class="block lg:hidden">
        <MenuIcon class="w-4 h-4 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <ul class="flex flex-col lg:flex-row lg:gap-8 items-center">
        <HeaderLink href="/blog">blog</HeaderLink>
        <HeaderLink href="/projects">projects</HeaderLink>
        <HeaderLink href="/about">about</HeaderLink>
        <HeaderLink href="#contact">contact</HeaderLink>
      </ul>
    </MenuItems>
  </Astronav>
</header>
