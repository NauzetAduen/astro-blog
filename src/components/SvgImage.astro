---
import svgSmartphone from "../img/icons/monitor-smartphone.svg";
import svgCodeSquare from "../img/icons/code-square.svg";
import svgMonitor from "../img/icons/monitor.svg";

const { iconString } = Astro.props;
const iconsMap: { [key: string]: ImageMetadata } = {
  smartphone: svgSmartphone,
  code: svgCodeSquare,
  monitor: svgMonitor,
};

//defaulting svgCodeSquare
const icon = iconsMap[iconString] ?? svgCodeSquare;
const altText = iconString === "undefined" ? iconString : "project";
---

<img width="20px" height="20px" src={icon.src} alt={altText} />
