---
import BaseHead from "../components/BaseHead.astro";
import MainLayout from "./MainLayout.astro";

const { title, description } = Astro.props;
---

<MainLayout>
  <BaseHead title={title} , description={description} slot="header" />
  <article
    class="my-9 prose-a:underline prose-p:my-1 prose-h1:font-bold prose-h1:text-2xl prose-h1:mb-2 prose-h1:mt-4 prose-h2:font-bold prose-h2:mt-6 prose-h2:mb-2 prose-a:decoration-2
  prose-a:ease prose-a:bg-gradient-to-tl prose-a:from-springGreen prose-a:to-springGreen prose-a:bg-invisibleSmall
  prose-a:bg-left-bottom prose-a:bg-no-repeat prose-a:duration-300 hover:prose-a:bg-visibleSmall prose-h2:text-fireEngineRed
  prose-img:my-1 prose-code:text-xs prose-code:lg:text-base prose-code:my-4 prose-code:px-4 prose-code:min-w-min prose-code:inline-block"
  >
    <slot />
  </article>
</MainLayout>
